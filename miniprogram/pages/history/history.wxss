/* pages/history/history.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px;
  width: 100%;
}

.card {
  width: 100%;
  background-color: #f8f8f8;
  border-radius: 10px;
  margin-bottom: 20px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

.header {
  padding: 20px;
  border-bottom: 1px solid #ddd;
}

.title {
  font-size: 18px;
  font-weight: bold;
}

.body {
  padding: 20px;
}

.row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.label {
  font-size: 14px;
  color: #666;
}

.value {
  font-size: 14px;
}

.empty-message {
  width: 100%;
  height: 500rpx;
  text-align: center;
  margin-top: 50rpx;
}
