.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  width: 100%;
  height: 200rpx;
  background-color: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.carousel {
  width: 750rpx;
  height: 400rpx;
  margin-top: 20rpx;
}

.carousel-image {
  width: 100%;
  height: 100%;
}

.current-location {
  width: 100%;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.myAddress,
.toAddress {
  width: 350rpx;
  height: 84rpx;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.divLine {
  width: 100%;
  height: 1rpx;
  background-color: #000000;
}

.buttons {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.now {
  width: 600rpx;
  height: 80rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
}
